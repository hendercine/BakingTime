<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.hendercine.android.bakingtime">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.hendercine.android.bakingtime.ui.MainSelectionActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.hendercine.android.bakingtime.ui.StepsListActivity"
            android:parentActivityName="com.hendercine.android.bakingtime.ui.MainSelectionActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hendercine.android.bakingtime.ui.MainSelectionActivity"/>

        </activity>

        <fragment
            android:name="com.hendercine.android.bakingtime.ui.StepsDetailFragment"
            android:label="@string/title_recipe_detail"
            android:parentActivityName="com.hendercine.android.bakingtime.ui.StepsListActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hendercine.android.bakingtime.ui.StepsListActivity"/>
        </fragment>
        <receiver
            android:name="com.hendercine.android.bakingtime.ui.StepsDetailFragment$MediaReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>